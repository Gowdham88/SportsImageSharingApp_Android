<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signinrel_lay"
    android:background="#34495E">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Sarvodaya"
        android:textStyle="bold"
        style="@style/FontAvenirheavy"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
         />
    <TextView
        android:id="@+id/text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="HandBall"
        android:textStyle="bold"
        style="@style/FontAvenirheavy"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:layout_below="@+id/text_view"
        />
    <LinearLayout
        android:id="@+id/user_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/text_view1">
        <EditText
            android:id="@+id/login_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textCursorDrawable="@drawable/color_cursor"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            style="@style/FontAvenirBook"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:background="@null"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>
        <EditText
            android:id="@+id/loginpass_edt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@null"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            style="@style/FontAvenirBook"
            android:textColorHint="#FFFFFF"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000000"/>

    </LinearLayout>
    <Button
        android:id="@+id/sinin_edt"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/user_lay"
        android:layout_marginLeft="30dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="18dp"
        style="@style/FontAvenirBook"
        android:textColor="#ECF0F1"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/dont_txt"
        style="@style/FontAvenirBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Don't have a sign in?"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />
</RelativeLayout>
