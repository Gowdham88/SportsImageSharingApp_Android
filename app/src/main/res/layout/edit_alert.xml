<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@drawable/editalert_bagnd"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <!--<ImageView-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_width="120dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:src="@drawable/notification"-->
    <!--android:contentDescription="@string/app_name" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Edit Profile"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/edit_corners"
        android:layout_gravity="center"
        android:gravity="center"/>
    <EditText
        android:id="@+id/profile_edt"
        style="@style/FontAvenirBook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:paddingLeft="5dp"
        android:hint="Enter Username"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/style_color_primary"
        android:textColorHint="@color/style_color_primary"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="15dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="#000000"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp">

    <Button
        android:text="Ok"
        android:id="@+id/ok_button"
        style="@style/ok_button"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="86dp"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:text="Cancel"
        android:id="@+id/cancel_button"
        style="@style/ok_button"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_width="86dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>
</LinearLayout>